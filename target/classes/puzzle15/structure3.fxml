<BorderPane prefHeight="200.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="puzzle15.Leaderboard">
    <top>
        <GridPane alignment="center" hgap="5" vgap="5" style="-fx-padding: 10 0 10 0;">
            <Label text="Moves" alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label text="Time" alignment="center" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        </GridPane>
    </top>
    <center>
        <GridPane fx:id="gridpane" alignment="center" hgap="5" vgap="5">
            <!-- LISTA RECORDS -->
        </GridPane>
    </center>
    <bottom>
        <VBox alignment="center" style="-fx-padding: 10 0 10 0;">
            <Button fx:id="button" styleClass="okbutton" BorderPane.alignment="center" text="Ok" onAction="#test"/>
        </VBox>
    </bottom>
</BorderPane>