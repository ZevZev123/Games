<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="200.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="minesweeper.Leaderboard">
    <top>
        <GridPane alignment="center" hgap="5" vgap="5" style="-fx-padding: 10 0 10 0;">
            <Label text="Grid size" alignment="center" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Label text="Bombs" alignment="center" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Time" alignment="center" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        </GridPane>
    </top>
    <center>
        <!-- <ScrollPane style="-fx-border-color:black;"> -->
        <GridPane fx:id="gridpane" style="-fx-border-color: black; -fx-width: 300px; -fx-display: flex; -fx-justify-content: space-around;" hgap="5" vgap="5">
            <!-- RECORDS LIST -->
            <Label text="1" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="2" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <Label text="3" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
        </GridPane>
        <!-- </ScrollPane> -->
    </center>
    <bottom>
        <VBox alignment="center" style="-fx-padding: 10 0 10 0;">
            <Button fx:id="button" alignment="center" text="Ok" onAction="#exit"/>
        </VBox>
    </bottom>
</BorderPane>