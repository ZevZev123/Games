<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="200.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="puzzle.ControllerPuzzle">
    <top>
        <HBox alignment="center" style="-fx-padding:10;">
            <Label fx:id="text" style="-fx-font-weight: bold; -fx-font-size: 15;"/>
        </HBox>
    </top>
    <center>
        <GridPane fx:id="matrice" alignment="center">
            <!-- Game Buttons -->
        </GridPane>
    </center>
    <bottom>
        <GridPane alignment="center" style="-fx-padding: 10;">
            <Button text="Change Image" style="-fx-min-width: 30px;" onAction="#imageChange" GridPane.columnIndex="0"/>
            <Button text="Shuffle" style="-fx-min-width: 30px;" onAction="#shuffle" GridPane.columnIndex="1"/>
        </GridPane>
    </bottom>
</BorderPane>