<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="200.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="minesweeper.MineController">
    <top>
        <VBox alignment="center" style="-fx-padding: 10 0 10 0;">
            <Label fx:id="flags" alignment="center"/>
        </VBox>
    </top>
    <center>
        <GridPane fx:id="mines" alignment="center">
            <!-- BUTTON LIST -->
        </GridPane>
    </center>
    <bottom>
        <GridPane alignment="center" style="-fx-padding: 10 0 10 0;" hgap="5">
            <Button text="LeaderBoard" onAction="#showLeaderboard" GridPane.columnIndex="0"/>
            <Button text="Restart" onAction="#restartGame" GridPane.columnIndex="1"/>
            <Button text="Configuration" onAction="#showConfiguration" GridPane.columnIndex="2"/>
        </GridPane>
    </bottom>
</BorderPane>